<controls:MetroWindow x:Class="MusicSpot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:views="clr-namespace:MusicSpot.Views"
        Title="MusicSpot" Height="800" Width="1000" MinHeight="600" MinWidth="800"
                      ResizeMode="CanResizeWithGrip"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <controls:MetroAnimatedTabControl 
            controls:TabControlHelper.IsUnderlined="True"
            controls:TabControlHelper.Transition="Up"

            SelectedIndex="{Binding SelectedTabIndex}">
            <controls:MetroTabItem Header="matches">
                <views:MusicView DataContext="{Binding MatchesViewModel}" />
            </controls:MetroTabItem>
            <controls:MetroTabItem Header="video">
                <views:VideoView DataContext="{Binding MatchesViewModel}" />
            </controls:MetroTabItem>
            <controls:MetroTabItem Header="pictures">
                <views:PictureView DataContext="{Binding MatchesViewModel}" />
            </controls:MetroTabItem>
        </controls:MetroAnimatedTabControl>
    </Grid>
</controls:MetroWindow>
